@page "/"

<PageTitle>Home | Senior Full Stack Developer</PageTitle>

<section class="hero section hero-surface">
    <div class="container">
        <div class="hero-grid">
            <div class="hero-copy">
                <h1 class="hero-name">Juan Andrés Quintanilla Calderón</h1>
                <p class="hero-role">Full Stack Developer .NET · Arquitecto de Software</p>
                <h2 class="hero-title">
                    Arquitectura de Software & <span class="hero-accent">Soluciones Empresariales</span>
                </h2>
                <p class="hero-summary">
                    Desarrollo plataformas .NET orientadas a negocio, con foco en seguridad, mantenibilidad y escalabilidad.
                    Trabajo con arquitectura limpia, automatización y estándares corporativos de entrega.
                </p>
                <div class="hero-cta">
                    <a href="projects" class="btn btn-primary">Ver Proyectos</a>
                    <a href="contact" class="btn btn-outline">Hablemos</a>
                </div>
            </div>

            <div class="hero-photo-wrap" aria-hidden="true">
                <div class="hero-photo">
                    @* Reemplaza este archivo por tu foto real: wwwroot/images/profile.jpg *@
                    <img src="images/FotoPortafolio.jpeg"
                         alt="Foto profesional"
                         loading="eager"
                         decoding="async"
                         fetchpriority="high"
                         onerror="this.onerror=null;this.src='images/profile-placeholder.svg';" />
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section" style="background-color: var(--surface-color);">
    <div class="container">
        <h2 class="text-center mb-8">Tecnologías Core</h2>
        <div class="tech-grid">
            <div class="card">
                <h3 class="tech-title">Backend & Integración</h3>
                <div class="tech-tags">
                    <span class="badge">.NET 8 / C#</span>
                    <span class="badge">ASP.NET Core</span>
                    <span class="badge">APIs REST</span>
                    <span class="badge">SOAP</span>
                    <span class="badge">Seguridad (JWT/OAuth2)</span>
                    <span class="badge">SQL Server</span>
                    <span class="badge">EF Core</span>
                    <span class="badge">Maui</span>
                    <span class="badge">WPF</span>
                </div>
            </div>

            <div class="card">
                <h3 class="tech-title">Arquitectura & Prácticas</h3>
                <div class="tech-tags">
                    <span class="badge">Arquitectura Limpia</span>
                    <span class="badge">Domain-Driven Design</span>
                    <span class="badge">Diseño orientado a dominio</span>
                    <span class="badge">Patrones (CQRS)</span>
                    <span class="badge">Code Review</span>
                    <span class="badge">Blazor</span>
                    <span class="badge">Xamarin</span>
                    <span class="badge">Windows Forms</span>
                </div>
            </div>

            <div class="card">
                <h3 class="tech-title">Frontend</h3>
                <div class="tech-tags">
                    <span class="badge">Blazor WebAssembly</span>
                    <span class="badge">Angular</span>
                    <span class="badge">React</span>
                    <span class="badge">JavaScript</span>
                    <span class="badge">jQuery</span>
                    <span class="badge">AJAX</span>
                </div>
            </div>

            <div class="card">
                <h3 class="tech-title">Desktop / Mobile & Tooling</h3>
                <div class="tech-tags">
                    <span class="badge">.NET MAUI</span>
                    <span class="badge">Xamarin</span>
                    <span class="badge">WinForms</span>
                    <span class="badge">WPF</span>
                    <span class="badge">Postman</span>
                    <span class="badge">GitHub</span>
                    <span class="badge">CI/CD</span>
                </div>
            </div>
        </div>
    </div>
</section>
